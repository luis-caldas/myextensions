{
    "manifest_version": 2,
    "name": "User-Agent Switcher",
    "short_name": "UA Switcher",
    "description": "User-Agent switcher that allows you to build your own User-Agent with pieces of your original one",
    "version": "1.2.0",
    "minimum_chrome_version": "20.0",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png",
        "256": "icons/icon-256.png",
        "512": "icons/icon-512.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "User-Agent Switcher"
    },
    "background": {
        "scripts": [ "background.js" ]
    },
    "permissions": [ "webRequest", "webRequestBlocking", "storage", "<all_urls>" ]
}
